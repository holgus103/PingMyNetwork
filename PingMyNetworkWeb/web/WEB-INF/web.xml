<?xml version="1.0" encoding="UTF-8"?>

<web-app>
    <servlet>
        <servlet-name>PingServlet</servlet-name>
        <servlet-class>pingMyNetwork.servlet.PingServlet</servlet-class>            
    </servlet>
    <servlet>
        <servlet-name>HistoryServlet</servlet-name>
        <servlet-class>pingMyNetwork.servlet.HistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PingServlet</servlet-name>
        <url-pattern>/ping</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryServlet</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>
    <env-entry>
        <env-entry-name>dbUrl</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>jdbc:derby://localhost:1527/PingMyNetwork</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>dbUser</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>app</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>dbPassword</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>password</env-entry-value>
    </env-entry>
</web-app>
